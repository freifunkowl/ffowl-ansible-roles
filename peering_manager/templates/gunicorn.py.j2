# {{ ansible_managed }}

# The IP address (typically localhost) and port that the Peering Manager  WSGI
# process should listen on
bind = '{{ peering_manager_gunicorn_address }}:{{ peering_manager_gunicorn_port }}'

# Number of gunicorn workers to spawn. This should typically be 2n+1, where
# n is the number of CPU cores present
workers = {{ peering_manager_gunicorn_workers_number }}

# Number of threads per worker process
threads = 3

# Timeout (in seconds) for a request to complete
timeout = 300

# The maximum number of requests a worker can handle before being respawned
max_requests = 5000
max_requests_jitter = 500
